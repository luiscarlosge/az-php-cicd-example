{
    "name": "azure-php-cicd-portal/cloud-computing-course",
    "description": "PHP-based static portal for Post Graduate Course in Cloud Computing",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/unit",
        "test-coverage": "phpunit --coverage-html coverage tests/unit"
    }
}
